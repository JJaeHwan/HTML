<script type="text/javascript">
proc1 = (htag) =>{
//	htag.style.display = "none";
	$(htag).css('display', 'none');
	
	// 비교 - 보여지는 h1태그가 없으면 - 다 사라졌으면
	if($('#res1 h1:visible').length < 1){
			$('#btn1').show();
	}
	
}

// $(document).ready(function() {
$(function() {
	

	
// 	$('#res2 h1').css('display', 'none');
	$('#res2 h1').on('click', function() {
		$(this).hide();
		
	})
	
	//res3검색 - h1검색
	hlist = $('#res3 h1'); //hlist는 jquery 변수
	
	for(i = 0; i < hlist.length; i++){
// 		hlist[i]  //jquery변수를 다시 dom변수로 변환
		hlist[i].addEventListener('click',hclick);
		
	}
	
})

function hclick() {
	this.style.display = 'none';
	
	$(this).hide();
	
}


</script>
<style type="text/css">
