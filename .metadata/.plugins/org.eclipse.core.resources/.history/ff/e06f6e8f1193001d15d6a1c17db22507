<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">

<style>

.siblings * { 
  display: block;
  border: 2px solid lightgrey;
  color: lightgrey;
  padding: 5px;
  margin: 15px;
}
.start{
	border : 3px solid black;

}

</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>


<script>
$(document).ready(function(){
	
	$('#next').on('click', function() {
		
	  $("li.start").next().css({"color": "red", "border": "2px solid red"});
		
		
	  })
	  $('#nextall').on('click', function() {
		nextall = $('li.start').nextAll();
		  
		$(nextall).css({"color": "blue", "border": "2px solid blue"})
	})
	
	$('#nextun').on('click', function() {
		vuntil = $('li.start').nextUntil($('li').last());
		
		$(vuntil).css({"color": "green", "border": "2px solid green"});
		
	})
	
	$('#prev').on('click', function() {
		vprev = $('li.start').prev();
		
		$(vprev).css({"color": "red", "border": "2px solid red"});
	})
	
	$('#prevall').on('click', function() {
		vprevall = $('li.start').prevAll();
		  
		$(vprevall).css({"color": "blue", "border": "2px solid blue"})
	})
	
	$('#prevun').on('click', function() {
		vprevun = $('li.start').prevUntil($('li').first());
		
		$(vprevun).css({"color": "green", "border": "2px solid green"});
		
	})
	
	$('#siblings').on('click', function() {
		vsibling = $('li.start').siblings();
		$(vsibling).css({"color": "white", "background": "blue"});
		
	})	
	
	$('#siblingsel').on('click', function() {
		vsiblingsel = $('li.start').siblings($('.cl'));
		
		$(vsiblingsel).css({"color": "yellow", "background": "green"});
	})
	
});
</script>

</head>

<body>
<input type="button" value="next" id="next">
<input type="button" value="nextall" id="nextall">
<input type="button" value="nextuntil" id="nextun">

<input type="button" value="prev" id="prev">
<input type="button" value="prevall" id="prevall">
<input type="button" value="prevuntil" id="prevun">
 
<input type="button" value="siblins" id="siblings">
<input type="button" value="siblinssel" id="siblingsel">

<div style="width:500px;" class="siblings">
  <ul>ul (parent)  
    <li>li (sibling)</li>
    <li class="cl">li (sibling)</li>
    <li class="cl">li (sibling)</li>
    <li>li (sibling)</li>
    <li class="start">li (sibling with class name "start")</li> 		<!--↑이전 기준 줄 ↓다음 -->
    <li class="cl">li (the next sibling of li with class name "start")</li>
    <li>li (sibling)</li>
    <li>li (sibling)</li>
    <li class="cl">li (sibling)</li>
    <li>li (sibling)</li>
  </ul>   
</div>

</body>
</html>
