<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script type="text/javascript">
$(function () {
	   $('#parent').on('click', function () {
	      
	        vparent = $("span").parent();
	        
	        $(vparent).css({"color": "red", "border": "2px solid red"})
	   })
	/* -------------------------------------------------------------------------- */
	   $('#parents').on('click', function () {
	      
	        vparents = $("span").parents();
	        
	        $(vparents).css({"color": "orange", "border": "2px solid orange"})
	   })
	/* -------------------------------------------------------------------------- */
	   
	   $('#parentsel').on('click', function () {
	      
	        vparentsSel = $("span").parents('#res1')
	        
	        $(vparentsSel).css({"color": "yellow", "border": "2px dotted yellow"})
	   })
	/* -------------------------------------------------------------------------- */
	   
	   $('#parentun').on('click', function () {
	      
	        vparentsUntil = $("span").parentsUntil('#res1');
	        
	        $(vparentsUntil).css({"color": "hotpink", "border": "2px dotted hotpink"})
	   })
	/* -------------------------------------------------------------------------- */
	   
		$('button[type=button]').on('click', function() {
			arr = ["조용히좀 해라 쪽팔리게!", "내 2천빌렸는데 2억달라합네다", "ㅠㅠ코스피 살려 ~",
				"코스닥도 살려 ~~ ", "나도 좀 살려~~~", "연진아 나한테 왜그러는거야?", "너는 그래도 아무일이 안일어나고",
						"나한테도 아무일도 안일어나잖아"];
			rand = parseInt(Math.random() * arr.length);
			
			vdd = $(this).parents('.dd');
			
			vp = $(vdd).find('p');
			$(vp).text(arr[rand]).css('color', 'red');
			
			
		})   
		
		$
	
	})


</script>


