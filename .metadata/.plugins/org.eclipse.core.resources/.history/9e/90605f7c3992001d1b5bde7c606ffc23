<script type="text/javascript">

$(function() {
	

	$('#btn1').on('click', function() {
		
		$('form *:enabled').css('border','2px solid pink');
		$('form *:disabled').css('border','2px solid pink');
		
		
	})
	
	$('#btn2').on('click', function() {
		
// 		$('input[type=checkbox]')
// 		$('input:checkbox')

// 		alert($(':checkbox:checked').val());

		str="";
		$(':checkbox:checked').each(function(x,y) {
// 			$('checkbox:checked')[x];
// 			$($('checkbox:checked')[x]).val();
// 			$(y).val();
			
			str += $(this).val() + "<br>";
			
			
		})
		
		$('#out').html(str);
		
	})
})
</script>

