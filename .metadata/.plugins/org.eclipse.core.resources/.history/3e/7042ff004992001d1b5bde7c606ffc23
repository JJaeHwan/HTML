<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/public.css">
<script src="../js/jquery-3.6.3.min.js" type="text/javascript"></script>

<script type="text/javascript">

$(function() {
	$('#btn1').on('click', function() {
		str="";
		$('p:visible').each(function() {
			str += $(this).text() + "<br>";
		})
		
		// 출력
		$('#visible').html(str);
	})
	
	$('#btn2').on('click', function() {
		str = "";
		$('p:hidden').each(function() {
			str += $(this).text() + "<br>";
		})
		
		$('#hidden').html(str);
		
	})
	
	$('#btn3').on('click',() => {
		
		str="*****visible객체*****<br>";
		
		$('#testForm *:visible').each(function() {
			
			// 태그이름을 비교 - tagName
// 			alert(this.tagName)
			if(this.tagName == "INPUT"){
			str += this.tagName +" : " + $(this).attr('name');
				str += " = " + $(this).val() + "<br>"
			}else if(this.tagName != "BR"){
				str += this.tagName + " : " +  $(this).text() + "<br>"
			}
		})
		$('#fvisible').html(str);
		
	})
	     $('#btn4').on('click', () =>{
        
        str="**** hidden객체 ****<br>"; //출력할 변수 선언
        
        $('#testForm *:hidden').each(function(){//-테스트 폼 안의 자식 모든것을 비지블 필터로 걸러낸다. each는 반복문
           
           // 태그 이름을 비교 - tagName -- 돔명령임. $기호 붙이면 안됨
//            alert(this.tagName);   //-this는 보여지고 있는 것의 0번째부터~를 태그 이름으로 비교
           if(this.tagName == "INPUT"){
              str += this.tagName + " : " + $(this).attr('name');   //-jquery메서드
              str += " = " + $(this).val() + "<br>";
              
           }else if(this.tagName != "BR"){
              str += this.tagName + " : " + $(this).text() + "<br>";
           }             
        })   
        
        $('#fhidden').html(str);
        
     })
	
	
	
})


</script>

</head>
<body>


<div class="box">
	<br><br>
	<input type="button" value="visible" id="btn1">
	<input type="button" value="hidden" id="btn2">
	<br>
	
		<p> 보이는 문단</p>
	  	<p style="visibility:hidden;">숨겨진 문단</p>
	  	<p style="display:none;"> 자리를 차지 하지 못한 문단 </p>
	  	<p style="opacity:0;"> 투명한 문단</p>
	  	
	
	<div id="visible"></div>
	<div id="hidden"></div>
</div>

<div class="box">
	<br><br>
	<input type="button" value="visible" id="btn3">
	<input type="button" value="hidden" id="btn4">
	<br>
	<form id="testForm"> 
		<input type="hidden" name="userAge" value="33">
		<input type="hidden" name="userCity" value="대전">
		I D : <input type="text" name="userID" value="하...">  
		<span style="display:none">ID가 중복됩니다. </span> <br>  
		이름 : <input type="text" name="userName" value="개졸리다">   
		<span style="visibility:hidden">이름을 입력하세요</span><br>  
		성별 : <input type="radio" name="sung" value="남" checked>남자  
		<input type="radio" name="sung" value="여">여자  
	</form>
	
	<div id="fvisible"></div>
	<div id="fhidden"></div>
</div>
</body>
