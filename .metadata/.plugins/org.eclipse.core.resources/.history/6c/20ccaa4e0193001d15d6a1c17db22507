<script type="text/javascript">
$(function() {
	$('p').on('click', function() {
		vstr = $(this).attr('title');
		vstr = $(this).text();
		
		// 이미지를 생성
		vimg = $('<img>', {
			'src' :	'../images/' + vstr + ".jpg",
			'alt' : vstr + ".jpg"
			
		})
		
		$(this).append(vimg);
		
	})
})

</script>

<style type="text/css">
p{
	border : 1px dotted orange;
	padding : 10px;
	
}
img{
	width: 100px;
	height: 100px;	
}

</style>
